{
  "manifest_version": 3,
  "name": "Frictionless FlowReader",
  "version": "1.0",
  "description": "Injects inline translations into ElevenLabs Reader.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://elevenreader.io/*",
    "https://*.elevenreader.io/*"
  ],
  "icons": {
    "16": "assets/favicons/favicon_dm.png",
    "48": "assets/favicons/favicon_dm.png",
    "128": "assets/favicons/favicon_dm.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/favicons/favicon_dm.png",
      "48": "assets/favicons/favicon_dm.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://elevenreader.io/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}